<?xml version="1.0" encoding="utf-8" ?>
<widget id="ImageViewer.widget.ImageViewer" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Interactive Image Viewer</name>
    <description>The Interactive Image Viewer widget.</description>
    <icon></icon>
    <properties>
        <property key="viewerWidth" type="integer" defaultValue="400">
            <caption>Viewer width</caption>
            <category>Appearance</category>
            <description>The width of the viewer in px.</description>
        </property>
        <property key="viewerHeight" type="integer" defaultValue="400">
            <caption>Viewer height</caption>
            <category>Appearance</category>
            <description>The height of the viewer in px.</description>
        </property>
        <property key="maxZoomLevel" type="integer" defaultValue="6">
            <caption>Max zoom</caption>
            <category>Appearance</category>
            <description>The maximum zoom-in level.</description>
        </property>
        <property key="zoomDefault" type="enumeration" defaultValue="fill">
            <caption>Image size</caption>
            <category>Appearance</category>
            <description>The size the image should start at.
            Auto loads it in full-size.
            Fill makes it fit the smallest dimension.
            Stretch sets the image to the viewer dimension (This may change the aspect ratios).</description>
            <enumerationValues>
                <enumerationValue key="fill">Fill</enumerationValue>
                <enumerationValue key="auto">Auto</enumerationValue>
                <enumerationValue key="stretch">Stretch</enumerationValue>
            </enumerationValues>  
        </property>
    </properties>
</widget>
